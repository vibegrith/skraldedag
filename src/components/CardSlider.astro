---
import { Image } from 'astro:assets';
import dino from '../assets/images/Dino.svg';
import computer from "../assets/images/computer_weighh.svg"
import email from "../assets/images/e-mail.svg"
import wifi from "../assets/images/wifi.svg"
import step1 from "../assets/images/s1.svg"
import step2 from "../assets/images/s2.svg"
import step3 from "../assets/images/s3.svg"
import step4 from "../assets/images/s4.svg"
import kabel from "../assets/images/Cabel.svg"
import spam from "../assets/images/spam.svg"

---

<div class="flex flex-row items-center h-[450px] overflow-x-auto gap-5 scroll-snap-x mandatory whitespace-nowrap border-b border-[var[--secondary-color-100)]">
 
    <div class=" flex flex-col items-center m-4 w-[400px] h-[250px] transition-all ease-in-out hover:scale-105 scroll-snap-align-center">
        <a href="https://drive.google.com/file/d/1LZAIsGLSJl7fOdqdp53YscYc0XTd2xv3/view" target="_blank">
            <Image class="h-[250px]" src={dino} alt="dino"/>
            <p class="text-center">Guidelines for individer</p>
        </a>
    </div>

    <div class="flex flex-col items-center m-4 w-[400px] h-[250px] transition-all ease-in-out hover:scale-105 scroll-snap-align-center">
        <a href="https://drive.google.com/file/d/1ZUIJl_EztcJmYF7GVDFN1LMPRtqM_7nM/view" target="_blank">
            <Image class="h-[250px]" src={computer} alt="computer"/>
            <p class="text-center">Guidelines for firmaer</p>
        </a>
    </div>

    <div class="flex flex-col items-center m-4 w-[400px] h-[250px] transition-all ease-in-out hover:scale-105 scroll-snap-align-center">
        <a href="https://drive.google.com/file/d/1dDw_YexhYGTxQIKMqcLMLnyekOTkTpJ0/view" target="_blank">
            <Image class="h-[250px]" src={email} alt="email"/>
            <p class="text-center">Guidelines for skoler</p>
        </a>
    </div>

    <div class="flex flex-col items-center m-4 w-[400px] h-[250px] transition-all ease-in-out hover:scale-105 scroll-snap-align-center">
        <a href="https://drive.google.com/file/d/1MRiPX57JrppZY4gwtKeKeCc0_rZX040P/view" target="_blank">
            <Image class="h-[250px]" src={wifi} alt="wifi"/>
            <p class="text-center">Guidelines for kommuner</p>
        </a>
    </div>

    <div class="flex flex-col items-center m-4 w-[400px] h-[250px] transition-all ease-in-out hover:scale-105 scroll-snap-align-center">
        <a href="https://drive.google.com/file/d/1i8rKagvbCXk4JciaEg896YUUti3bjLbU/view" target="_blank">
            <Image class="w-[270px] h-[250px]" src={step2} alt="step1"/>
            <p class="text-center">Sådan rydder du op på din computer</p>
        </a>
    </div>

    <div class="flex flex-col items-center m-4 w-[400px] h-[250px] transition-all ease-in-out hover:scale-105 scroll-snap-align-center">
        <a href="https://drive.google.com/file/d/1Capnwt-idzQoVtV1jNTM2HeJnvYVNQIi/view" target="_blank">
            <Image class="w-[270px] h-[250px]" src={step3} alt="step2"/>
            <p class="text-center">Sådan rydder du op i dine emails</p>
        </a>
    </div>

    <div class="flex flex-col items-center m-4 w-[400px] h-[250px] transition-all ease-in-out hover:scale-105 scroll-snap-align-center">
        <a href="https://drive.google.com/file/d/1fN0bgV8R1WAirubd_1QlSH17lYHt6eE_/view" target="_blank">
            <Image class="w-[270px] h-[250px]" src={step1} alt="step3"/>
            <p class="text-center">Sådan rydder du op i din mobil</p>
        </a>
    </div>

    <div class="flex flex-col items-center m-4 w-[400px] h-[250px] transition-all ease-in-out hover:scale-105 scroll-snap-align-center">
        <a href="https://docs.google.com/spreadsheets/d/1LvTHVLLRsCICSQ-FMwtqy1whl1PlQFKy/edit?gid=631660431#gid=631660431" target="_blank">
            <Image class="w-[270px] h-[250px]" src={step4} alt="step4"/>
            <p class="text-center">Deltager data samling 1</p>
        </a>
    </div>


    <div class="flex flex-col items-center m-4 w-[400px] h-[250px] transition-all ease-in-out hover:scale-105 scroll-snap-align-center">
        <a href="https://docs.google.com/spreadsheets/d/1k56qMJsp3zgDhlsCngBhdjaSHP_z9TqM/edit?gid=464700726#gid=464700726" target="_blank">
            <Image class="w-[270px] h-[250px]" src={kabel} alt="kabel"/>
            <p class="text-center">Deltager data samling 2</p>
        </a>
    </div>

    <div class="flex flex-col items-center m-4 w-[400px] h-[250px] transition-all ease-in-out hover:scale-105 scroll-snap-align-center">
        <a href="https://trello.com/b/YzROvY3M/digital-cleanup-day" target="_blank">
            <Image class="w-[270px] h-[250px]" src={spam} alt="spam"/>
            <p class="text-center">Markedsføring materialer</p>
        </a>
    </div>
</div>


<style>
    .scroll-snap-x {
        scroll-snap-type: x mandatory;
    }

    .scroll-snap-align-center {
        scroll-snap-align: center;
    }
</style>
